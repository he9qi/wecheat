<form class="form-horizontal" action="/apps/<%= app.id %>" method="post">
  <input type="hidden" name="_method" value="PUT"/>

  <div class="form-group">
    <label class="col-sm-2 control-label">Label</label>
    <div class="col-sm-10">
      <input class="form-control" name="app[label]" value="<%= app.label %>" />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Token</label>
    <div class="col-sm-10">
      <input class="form-control" name="app[token]" value="<%= app.token %>" />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Url</label>
    <div class="col-sm-10">
      <input class="form-control" name="app[url]" value="<%= app.url %>" />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Encoding Key</label>
    <div class="col-sm-10">
      <input class="form-control" name="app[encoding_key]" value="<%= app.encoding_key %>" />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </div>
</form>
